{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es5",
        // "lib": ["dom", "es2015"],
        "module": "es2015",
        "allowSyntheticDefaultImports": false,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "baseUrl": "./src",
        "outDir": "dist",
        "paths":{
            "/": ["/"],
            "@": ["src/*"],
        },
        "strictNullChecks": false,
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}